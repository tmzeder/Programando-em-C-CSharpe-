using System;

class Program {
    static void Main(string[] args)
    {
      Console.WriteLine("Informe o 1º valor: ");
      int num1 = int.Parse(Console.ReadLine());

      Console.WriteLine("Informe o 2º valor: ");
      int num2 = int.Parse(Console.ReadLine());
      int soma = num1 + num2;
      Console.WriteLine($"A Soma dos valores é: {soma}");
    
    double area, raio, pi = 3.14159;

    raio = double.Parse(Console.ReadLine());
    area = raio * pi *raio;

    Console.WriteLine($"O valor da area é: {area.ToString ("F4")}");

      
      Console.WriteLine("Informe os valores para saber a diferença: ");
      int a, b, c, d, diferenca;
      
        a = int.Parse(Console.ReadLine());
        b = int.Parse(Console.ReadLine());
        c = int.Parse(Console.ReadLine());
        d = int.Parse(Console.ReadLine());
        diferenca = a * b - c * d;

      Console.WriteLine($"A Diferença entre os valores é: {diferenca}");
      
    } 
  }
